<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    android:gravity="center_horizontal"
    >
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_banker"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_banker"
            android:layout_marginLeft="5dp"
            android:text="@string/game_banker"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_start_time"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_start_time"
            android:layout_marginLeft="5dp"
            android:text="@string/game_start_time"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_room_id"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_room_id"
            android:layout_marginLeft="5dp"
            android:text="@string/game_room_id"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_bonus_id"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_bonus_id"
            android:layout_marginLeft="5dp"
            android:text="@string/game_bonus_id"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_id"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_id"
            android:layout_marginLeft="5dp"
            android:text="@string/game_id"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_banker_bonus"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_banker_bonus"
            android:layout_marginLeft="5dp"
            android:text="@string/game_banker_bonus"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/game_banker_win"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/game_banker_win"
            android:layout_marginLeft="5dp"
            android:text="@string/game_banker_win"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/bet_list"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
